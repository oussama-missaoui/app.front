{% extends 'profile_admin/index.html.twig' %}

{% block title %}RendezVous index{% endblock %}

{% block body %}
<div class="background">

    <div class="container" >
        <div  class="contact">

                <div class="card" >
    <h1>Meet Time List</h1>
                </div>
            <div class="card" >
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Heure</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody >
        {% for rendez_vou in rendez_vouses %}
            <tr>
                <td>{{ rendez_vou.id }}</td>
                <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d') : '' }}</td>
                <td>{{ rendez_vou.heure ? rendez_vou.heure|date('H:i:s') : '' }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                    <a  class="btn btn-info" href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}">Show</a>
                        {{ include('rendez_vous/_delete_form.html.twig') }}
                    </div>
                    </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            </div>
        </div>
    </div>
</div>
{% endblock %}
