{% extends 'profile_admin/index.html.twig' %}

{% block title %}Terrain List {% endblock %}

{% block body %}
<div class="background">

    <div class="container" >
        <div  class="contact">

                <div class="card" >

                <h1>Terrain List</h1>


                    <br>
                </div>
            <div class="card" >
                <div class="my-md-4 pb-4">
                    <a  class="btn btn-primary" type="button"href="{{ path('app_terrain_new') }}">Create New Terrain</a>

                </div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Dimension</th>
                <th>Adress</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for terrain in terrains %}
            <tr>
                <td>{{ terrain.id }}</td>
                <td>{{ terrain.type }}</td>
                <td>{{ terrain.dimension }}</td>
                <td>{{ terrain.adress }}</td>

                <td >
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a type="button" class="btn btn-info inline" href="{{ path('app_terrain_show', {'id': terrain.id}) }}"  >Show</a>

                        <a type="button" class="btn btn-secondary inline" href="{{ path('app_terrain_edit', {'id': terrain.id}) }}" >Edit</a>
                        {{ include('terrain/_delete_form.html.twig') }}
                    </div>


                </td>



            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
