{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
 {% block stylesheets %}
<style>
     .inscription{
     background-image: url(https://img.freepik.com/vecteurs-libre/fond-terrain-football-degrade_23-2149017952.jpg?w=2000);
     background-size: cover;
     align-items: center!important;
     height: 100%!important;
     display: flex!important;

     }
</style>
 {% endblock %}

{% block body %}

<div class="inscription">

 <div class="container">
     <div class="row justify-content-center">
         <div class="card" style="border-radius: 1rem;">
             <div class="card-body p-5 text-center">
                 <div class="my-md-4 pb-4">

     <h1>Sign Up</h1>
     <p>Please fill in this form to create an account.</p>

    {{ form_start(registrationForm) }}

     <div class="form-outline mb-4">
    {{ form_row(registrationForm.nom , {
        label: 'First Name :'
    }) }}
     </div>
     <div class="form-outline mb-4">
    {{ form_row(registrationForm.prenom , {
        label: 'Last name:'
    }) }}

     </div>

     <div class="form-outline mb-4">

         {{ form_row(registrationForm.email , {
             label: 'Email :'
         }) }}
     </div>
     <div class="form-outline mb-4">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password :'
        }) }}
     </div>
     <div class="form-outline mb-4">
    {{ form_row(registrationForm.num_tel, {
        label: 'Phone Number :'
    }) }}
     </div>
                     <div class="form-outline mb-4">
                         {{ form_row(registrationForm.sexe , {
                             label: 'Sexe :'
                         }) }}
                     </div>
        {{ form_row(registrationForm.agreeTerms) }}
     <H4>By creating an account you agree to our Terms & Privacy.</H4>

        <button type="submit" class="btn btn-lg btn-success btn-lg btn-rounded  text-body px-5">SIGN IN</button>
     <button type="button" class="btn btn-secondary btn-lg btn-rounded  text-body px-5">Cancel</button>
                     {{ form_end(registrationForm) }}

                 </div>
             </div>
         </div>
     </div>
 </div>

    </div>

{% endblock %}
