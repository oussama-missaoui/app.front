{% extends 'profile_admin/index.html.twig' %}

{% block title %}Contact index{% endblock %}



{% block body %}

    <div class="background">

    <div class="container" >
        <div  class="contact">
            <div class="card" >
            <h1 >Contact List </h1>
            </div>
            <div class="card" >


    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th >Id</th>
                <th >Objet</th>
                <th > Message</th>
                <th >Actions</th>


            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td >{{ contact.id }}</td>
                <td >{{ contact.objet }}</td>
                <td >{{ contact.message }}</td>
                <td >
                    <div class="btn-group" role="group" aria-label="Basic example">
                    <a type="button" class="btn btn-info inline"  href="{{ path('app_contact_show', {'id': contact.id}) }}">Show</a>
                    <a type="button" class="btn btn-secondary inline"  href="{{ path('app_contact_edit', {'id': contact.id}) }}">Edit</a>
                        {{ include('contact/_delete_form.html.twig') }}
                    </div>
                </td>




            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>


    </table>
                    </div>
                </div>
            </div>
        </div>


        {% endblock %}

